{
  "name": "puzzle-rain",
  "version": "1.0.0",
  "description": "A room-scale WebVR puzzle game for the HTC Vive.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozvr/puzzle-rain.git"
  },
  "main": "lib/index.js",
  "dependencies": {
    "browserify": "^13.0.0",
    "glslify": "^5.0.2",
    "mkdirp": "^0.5.1",
    "three": "0.81.2",
    "tween.js": "v16.3.4",
    "uglify-js": "^2.6.2"
  },
  "devDependencies": {
    "budo": "^8.2.2",
    "ghpages": "0.0.8"
  },
  "scripts": {
    "start": "budo --open lib/index.js:js/index.js --dir app --live --cors",
    "build": "mkdirp app/js && browserify lib/index.js | uglifyjs -c warnings=false -m > app/js/index.js",
    "postinstall": "npm run build",
    "ghpages": "ghpages",
    "predeploy": "npm run build",
    "deploy": "npm run ghpages -- -p app"
  },
  "browserify": {
    "transform": [
      "glslify"
    ]
  },
  "authors": [
    "Arturo Paracuellos <arturo@unboring.net>"
  ],
  "license": "MIT"
}
